{
  "exclude": ["build"],
  "compilerOptions": {
    "outDir": "./build",
    "target": "es2016",
    "jsx": "react",
    "module": "commonjs",
    "esModuleInterop": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@app/*": ["app/*"],
      "@common/*": ["common/*"],
      "@ui/*": ["ui/*"]
    }
  }
}
